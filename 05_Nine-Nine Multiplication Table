#include <stdio.h>
#include <stdlib.h>

int main()
{
	int x, y, z;
	for (x = 1; x <= 9; x++) //for迴圈格式：(初始條件;運行條件;更新條件)。
	{
		for (y = 1; y <= 9; y++) //y++與y+1相同。
		{
			z = x * y;
			printf("%dX%d=%d\t", x, y, z); //"\t"為空格。
		}
		printf("\n"); //進行換行。
	}
}

//for迴圈格式：(初始條件;運行條件;更新條件)
//第一次運行前為初始條件。
//符合運行條件則運行迴圈內容。
//運行完畢執行更新條件，重新判斷是否符合運行條件。
